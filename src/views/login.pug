//- views/login.pug
extends layout

block content
  h1.text-3xl.font-bold.mb-6 Connexion

  if registered
    p.mb-4.p-3.bg-green-100.border.border-green-300.rounded
      | Inscription réussie. Tu peux te connecter maintenant.

  if logout
    p.mb-4.p-3.bg-blue-100.border.border-blue-300.rounded
      | Tu es déconnecté.

  if error
    p.mb-4.p-3.bg-red-100.border.border-red-300.rounded
      | Identifiants invalides.

  .bg-white.rounded.shadow.p-6
    form(method="post", action="/login", class="space-y-4")
      .grid.grid-cols-1.gap-4
        label.block
          span.block.mb-1.text-sm.text-gray-700 Nom d'utilisateur
          input.border.rounded.p-2.w-full(type="text", name="username", required)
        label.block
          span.block.mb-1.text-sm.text-gray-700 Mot de passe
          input.border.rounded.p-2.w-full(type="password", name="password", required)
      button.border.rounded.px-4.py-2(type="submit") Se connecter

    p.text-sm.mt-3
      | Pas de compte ?
      a(href="/register", class="text-blue-600 hover:underline") Inscris-toi
