{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "bundler",
    "lib": ["DOM", "ES2020"],
    "rootDir": "./Frontend/js",
    "outDir": "./Frontend/dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["Frontend/js/**/*.ts"],
  "exclude": ["Frontend/dist", "Backend"]
}
